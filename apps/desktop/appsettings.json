{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "Console": {
      "LogLevel": {
        "Default": "Information"
      }
    },
    "File": {
      "LogLevel": {
        "Default": "Information"
      },
      "Path": "Logs/voice-input-assistant-.txt",
      "RollingInterval": "Day",
      "RetainedFileCountLimit": 7
    }
  },
  "VoiceInputAssistant": {
    "Speech": {
      "DefaultEngine": "WhisperLocal",
      "DefaultQuality": "Balanced",
      "DefaultLanguage": "en-US",
      "Engines": {
        "WhisperLocal": {
          "ModelsPath": "Models/Whisper",
          "DefaultModel": "base"
        },
        "AzureSpeech": {
          "Region": "eastus",
          "ApiKey": ""
        },
        "OpenAIWhisper": {
          "ApiKey": ""
        }
      }
    },
    "Audio": {
      "SampleRate": 16000,
      "Channels": 1,
      "BitsPerSample": 16,
      "BufferSize": 4096
    },
    "UI": {
      "Theme": "Auto",
      "StartMinimized": false,
      "MinimizeToTray": true,
      "ShowNotifications": true
    },
    "Hotkeys": {
      "GlobalHotkeysEnabled": true,
      "PushToTalkKey": "F1",
      "ToggleListeningKey": "F2"
    },
    "Updates": {
      "CheckForUpdates": true,
      "AutoUpdate": false,
      "UpdateChannel": "stable"
    }
  }
}