<Window x:Class="VoiceInputAssistant.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="Voice Input Assistant"
        Height="600"
        Width="900"
        MinHeight="500"
        MinWidth="700"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Icon="../Assets/icon.ico"
        StateChanged="MainWindow_StateChanged"
        Closing="MainWindow_Closing"
        Opacity="0">
    
    <Window.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                   From="0" To="1" Duration="0:0:0.3"
                                   AccelerationRatio="0.2" DecelerationRatio="0.7"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <Style x:Key="StatusCardStyle" TargetType="materialDesign:Card">
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="materialDesign:ShadowAssist.ShadowDepth" Value="Depth1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="materialDesign:ShadowAssist.ShadowDepth" Value="Depth2"/>
                    <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp4"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}"/>
        </Style>
        
        <Style x:Key="EnhancedActionButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Loading Animation Style -->
        <Style x:Key="LoadingSpinnerStyle" TargetType="materialDesign:PackIcon">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsProcessing}" Value="True">
                    <DataTrigger.EnterActions>
                        <BeginStoryboard Name="SpinStoryboard">
                            <Storyboard RepeatBehavior="Forever">
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                               From="0" To="360" Duration="0:0:1"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.EnterActions>
                    <DataTrigger.ExitActions>
                        <StopStoryboard BeginStoryboardName="SpinStoryboard"/>
                    </DataTrigger.ExitActions>
                </DataTrigger>
            </Style.Triggers>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <RotateTransform Angle="0"/>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
        </Style>
        
        <!-- Pulse Animation for Listening State -->
        <Style x:Key="ListeningIndicatorStyle" TargetType="materialDesign:PackIcon">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsListening}" Value="True">
                    <DataTrigger.EnterActions>
                        <BeginStoryboard Name="PulseStoryboard">
                            <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                               From="1.0" To="0.3" Duration="0:0:0.8"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                               From="1.0" To="1.1" Duration="0:0:0.8"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                               From="1.0" To="1.1" Duration="0:0:0.8"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.EnterActions>
                    <DataTrigger.ExitActions>
                        <StopStoryboard BeginStoryboardName="PulseStoryboard"/>
                    </DataTrigger.ExitActions>
                </DataTrigger>
            </Style.Triggers>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <materialDesign:ColorZone Grid.Row="0" 
                                  Mode="PrimaryMid" 
                                  Padding="16"
                                  materialDesign:ShadowAssist.ShadowDepth="Depth2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="Microphone" 
                                           Width="24" 
                                           Height="24" 
                                           Margin="0,0,8,0"
                                           Foreground="White"/>
                    <TextBlock Text="Voice Input Assistant" 
                             FontSize="18" 
                             FontWeight="Medium" 
                             Foreground="White"
                             VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Style="{StaticResource MaterialDesignToolButton}"
                            ToolTip="Settings"
                            Command="{Binding OpenSettingsCommand}"
                            Margin="4,0">
                        <materialDesign:PackIcon Kind="Settings" 
                                               Width="20" 
                                               Height="20" 
                                               Foreground="White"/>
                    </Button>
                    
                    <Button Style="{StaticResource MaterialDesignToolButton}"
                            ToolTip="Help"
                            Command="{Binding ShowHelpCommand}"
                            Margin="4,0">
                        <materialDesign:PackIcon Kind="HelpCircle" 
                                               Width="20" 
                                               Height="20" 
                                               Foreground="White"/>
                    </Button>
                    
                    <Button Style="{StaticResource MaterialDesignToolButton}"
                            ToolTip="Minimize to Tray"
                            Click="MinimizeToTray_Click"
                            Margin="4,0">
                        <materialDesign:PackIcon Kind="WindowMinimize" 
                                               Width="20" 
                                               Height="20" 
                                               Foreground="White"/>
                    </Button>
                </StackPanel>
            </Grid>
        </materialDesign:ColorZone>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="16">
            <StackPanel>
                
                <!-- Status Section -->
                <TextBlock Text="Status" Style="{StaticResource SectionHeaderStyle}"/>
                
                <Grid Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <materialDesign:Card Grid.Column="0" Style="{StaticResource StatusCardStyle}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <materialDesign:PackIcon Kind="Circle" 
                                                       Width="16" 
                                                       Height="16" 
                                                       Margin="0,0,8,0"
                                                       Foreground="{Binding StatusColor}"/>
                                <TextBlock Text="Recognition Status" FontWeight="Medium"/>
                            </StackPanel>
                            <TextBlock Text="{Binding RecognitionStatus}" 
                                     FontSize="12" 
                                     Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                        </StackPanel>
                    </materialDesign:Card>
                    
                    <materialDesign:Card Grid.Column="1" Style="{StaticResource StatusCardStyle}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <materialDesign:PackIcon Kind="Engine" 
                                                       Width="16" 
                                                       Height="16" 
                                                       Margin="0,0,8,0"
                                                       Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                <TextBlock Text="Active Engine" FontWeight="Medium"/>
                            </StackPanel>
                            <TextBlock Text="{Binding ActiveEngine}" 
                                     FontSize="12" 
                                     Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                        </StackPanel>
                    </materialDesign:Card>
                    
                    <materialDesign:Card Grid.Column="2" Style="{StaticResource StatusCardStyle}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <materialDesign:PackIcon Kind="Application" 
                                                       Width="16" 
                                                       Height="16" 
                                                       Margin="0,0,8,0"
                                                       Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                <TextBlock Text="Active Profile" FontWeight="Medium"/>
                            </StackPanel>
                            <TextBlock Text="{Binding ActiveProfile}" 
                                     FontSize="12" 
                                     Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                        </StackPanel>
                    </materialDesign:Card>
                </Grid>

                <!-- Quick Actions -->
                <TextBlock Text="Quick Actions" Style="{StaticResource SectionHeaderStyle}"/>
                
                <UniformGrid Columns="2" Margin="0,0,0,24">
                    <Button Style="{StaticResource EnhancedActionButtonStyle}"
                            Height="60"
                            Margin="4"
                            Command="{Binding ToggleListeningCommand}"
                            Background="{Binding ListeningButtonColor}"
                            ToolTip="Start/Stop voice recognition (Ctrl+Space)">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="{Binding ListeningIcon}" 
                                                   Width="20" 
                                                   Height="20" 
                                                   Margin="0,0,8,0"
                                                   Style="{StaticResource ListeningIndicatorStyle}"/>
                            <TextBlock Text="{Binding ListeningButtonText}" 
                                     VerticalAlignment="Center"
                                     FontSize="14"
                                     FontWeight="Medium"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Style="{StaticResource EnhancedActionButtonStyle}"
                            Height="60"
                            Margin="4"
                            Command="{Binding TestRecognitionCommand}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="TestTube" 
                                                   Width="20" 
                                                   Height="20" 
                                                   Margin="0,0,8,0"/>
                            <TextBlock Text="Test Recognition" 
                                     VerticalAlignment="Center"
                                     FontSize="14"
                                     FontWeight="Medium"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Style="{StaticResource EnhancedActionButtonStyle}"
                            Height="60"
                            Margin="4"
                            Command="{Binding OpenSettingsCommand}"
                            ToolTip="Open application settings (F2)">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Settings" 
                                                   Width="20" 
                                                   Height="20" 
                                                   Margin="0,0,8,0"/>
                            <TextBlock Text="Settings" 
                                     VerticalAlignment="Center"
                                     FontSize="14"
                                     FontWeight="Medium"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Style="{StaticResource EnhancedActionButtonStyle}"
                            Height="60"
                            Margin="4"
                            Command="{Binding OpenHistoryCommand}"
                            ToolTip="View transcription history (F3)">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="History" 
                                                   Width="20" 
                                                   Height="20" 
                                                   Margin="0,0,8,0"/>
                            <TextBlock Text="View History" 
                                     VerticalAlignment="Center"
                                     FontSize="14"
                                     FontWeight="Medium"/>
                        </StackPanel>
                    </Button>
                </UniformGrid>

                <!-- Recent Activity -->
                <TextBlock Text="Recent Activity" Style="{StaticResource SectionHeaderStyle}"/>
                
                <materialDesign:Card Margin="0,0,0,16">
                    <Grid>
                        <!-- Loading indicator -->
                        <StackPanel Visibility="{Binding IsLoadingHistory, Converter={StaticResource BooleanToVisibilityConverter}}"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Margin="32">
                            <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                       IsIndeterminate="True"
                                       Width="32"
                                       Height="32"
                                       Margin="0,0,0,16"/>
                            <TextBlock Text="Loading recent activity..." 
                                     HorizontalAlignment="Center"
                                     Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                        </StackPanel>

                        <!-- History list -->
                        <ListView ItemsSource="{Binding RecentRecognitions}"
                                MaxHeight="300">
                            <ListView.Style>
                                <Style TargetType="ListView">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsLoadingHistory}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding HasRecentActivity}" Value="False">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ListView.Style>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem" BasedOn="{StaticResource MaterialDesignListBoxItem}">
                                    <Setter Property="Padding" Value="16,8"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Text}" 
                                                     FontWeight="Medium"
                                                     TextWrapping="Wrap"
                                                     MaxHeight="40"
                                                     TextTrimming="CharacterEllipsis"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                <TextBlock Text="{Binding Engine}" 
                                                         FontSize="11"
                                                         Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                         Margin="0,0,8,0"/>
                                                <TextBlock Text="{Binding CompletedTime, StringFormat=HH:mm:ss}" 
                                                         FontSize="11"
                                                         Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                            </StackPanel>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Column="1" 
                                                  Orientation="Horizontal" 
                                                  VerticalAlignment="Center">
                                            <materialDesign:Chip Content="{Binding Confidence, StringFormat=P0}" 
                                                               FontSize="10"
                                                               Height="24"
                                                               Margin="8,0,0,0"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                        <!-- Empty state -->
                        <StackPanel HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Margin="32">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding IsLoadingHistory}" Value="False"/>
                                                <Condition Binding="{Binding HasRecentActivity}" Value="False"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>
                            <materialDesign:PackIcon Kind="History" 
                                                   Width="48" 
                                                   Height="48" 
                                                   Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,0,0,16"/>
                            <TextBlock Text="No recent activity" 
                                     HorizontalAlignment="Center"
                                     FontSize="14"
                                     Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                            <TextBlock Text="Start using voice recognition to see your activity here" 
                                     HorizontalAlignment="Center"
                                     FontSize="12"
                                     Foreground="{DynamicResource MaterialDesignBodyLight}"
                                     Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>
            </StackPanel>
        </ScrollViewer>

        <!-- Status Bar -->
        <materialDesign:ColorZone Grid.Row="2" 
                                  Mode="PrimaryLight"
                                  Padding="16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Ready" 
                             VerticalAlignment="Center"
                             FontSize="12"/>
                    <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}"
                             Margin="8,0"/>
                    <TextBlock Text="{Binding StatusMessage}" 
                             VerticalAlignment="Center"
                             FontSize="12"/>
                </StackPanel>
                
                <TextBlock Grid.Column="1" 
                         Text="{Binding Version}" 
                         VerticalAlignment="Center"
                         FontSize="11"
                         Foreground="{DynamicResource MaterialDesignBodyLight}"/>
            </Grid>
        </materialDesign:ColorZone>
        
        <!-- Overlay for listening state -->
        <Border Grid.RowSpan="3"
                Background="{DynamicResource MaterialDesignPaper}"
                Opacity="0.95"
                Visibility="{Binding IsListening, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" 
                        VerticalAlignment="Center">
                <materialDesign:PackIcon Kind="Microphone" 
                                       Width="64" 
                                       Height="64" 
                                       Foreground="{DynamicResource SecondaryHueMidBrush}"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,16">
                    <materialDesign:PackIcon.RenderTransform>
                        <ScaleTransform/>
                    </materialDesign:PackIcon.RenderTransform>
                    <materialDesign:PackIcon.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                   From="1" To="1.2" Duration="0:0:1"/>
                                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                   From="1" To="1.2" Duration="0:0:1"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </materialDesign:PackIcon.Triggers>
                </materialDesign:PackIcon>
                
                <TextBlock Text="Listening..." 
                         FontSize="24" 
                         FontWeight="Medium"
                         HorizontalAlignment="Center"
                         Margin="0,0,0,8"/>
                         
                <StackPanel HorizontalAlignment="Center" Margin="0,8,0,0">
                    <TextBlock Text="Press ESC to cancel" 
                             FontSize="12"
                             HorizontalAlignment="Center"
                             Foreground="{DynamicResource MaterialDesignBodyLight}"
                             Opacity="0.8"/>
                </StackPanel>
                         
                <TextBlock Text="Speak now, or press Escape to cancel" 
                         FontSize="14"
                         HorizontalAlignment="Center"
                         Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                         
                <ProgressBar Style="{StaticResource MaterialDesignLinearProgressBar}"
                           Width="200"
                           Height="4"
                           Margin="0,16,0,0"
                           Value="{Binding AudioLevel}"
                           Maximum="100"
                           Foreground="{DynamicResource SecondaryHueMidBrush}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>