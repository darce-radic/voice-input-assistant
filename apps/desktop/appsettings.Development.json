{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "Console": {
      "LogLevel": {
        "Default": "Debug"
      }
    },
    "File": {
      "LogLevel": {
        "Default": "Debug"
      },
      "Path": "Logs/voice-input-assistant-dev-.txt",
      "RollingInterval": "Day",
      "RetainedFileCountLimit": 30
    }
  },
  "VoiceInputAssistant": {
    "Speech": {
      "DefaultEngine": "WhisperLocal",
      "DefaultQuality": "Fast",
      "Engines": {
        "WhisperLocal": {
          "DefaultModel": "tiny"
        }
      }
    },
    "UI": {
      "Theme": "Dark",
      "StartMinimized": false,
      "ShowNotifications": true
    },
    "Updates": {
      "CheckForUpdates": false,
      "AutoUpdate": false,
      "UpdateChannel": "dev"
    }
  }
}