{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Grpc": "Debug"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"],
    "Properties": {
      "Application": "VoiceInputAssistant.WebApi"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Key": "VoiceInputAssistant_DevKey_2024_MinimumLength32Characters!",
    "Issuer": "VoiceInputAssistant",
    "Audience": "VoiceInputAssistant",
    "ExpiryInHours": 24,
    "AccessTokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 30
  },
  "Kestrel": {
    "EndpointDefaults": {
      "Protocols": "Http1AndHttp2"
    },
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:5000"
      },
      "Https": {
        "Url": "https://localhost:5001"
      },
      "gRPC": {
        "Url": "http://localhost:5002",
        "Protocols": "Http2"
      }
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=voice_input_assistant.db"
  },
  "Email": {
    "IsEnabled": false,
    "SmtpServer": "smtp.gmail.com",
    "SmtpPort": 587,
    "Username": "",
    "Password": "",
    "UseSsl": true,
    "FromEmail": "noreply@voiceassistant.com",
    "FromName": "Voice Input Assistant",
    "BaseUrl": "https://localhost:5001"
  },
  "Whisper": {
    "ModelPath": "whisper-model.bin"
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": false,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1s",
        "Limit": 10
      },
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 100
      },
      {
        "Endpoint": "*",
        "Period": "1h",
        "Limit": 1000
      }
    ]
  },
  "VoiceAssistant": {
    "Security": {
      "RequireHttps": true,
      "AllowedOrigins": [
        "http://localhost:3000",
        "https://localhost:3001"
      ]
    },
    "Features": {
      "EnableSwagger": true,
      "EnableGrpcWeb": true,
      "EnableHealthChecks": true,
      "EnableCors": true
    }
  }
}