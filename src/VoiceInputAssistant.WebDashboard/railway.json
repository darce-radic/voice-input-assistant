{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm run build",
    "watchPatterns": [
      "**/*.ts",
      "**/*.tsx",
      "**/*.js",
      "**/*.jsx",
      "package.json",
      "package-lock.json"
    ]
  },
  "deploy": {
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "REACT_APP_ENV": "production",
        "GENERATE_SOURCEMAP": "false",
        "INLINE_RUNTIME_CHUNK": "false",
        "REACT_APP_DOMAIN": "voiceinputassistant.up.railway.app",
        "REACT_APP_BASE_URL": "https://voiceinputassistant.up.railway.app",
        "REACT_APP_ENABLE_PWA": "true",
        "REACT_APP_ENABLE_OFFLINE": "true",
        "REACT_APP_ENABLE_PUSH_NOTIFICATIONS": "true",
        "REACT_APP_ENABLE_ANALYTICS": "true",
        "REACT_APP_MOCK_API": "false",
        "REACT_APP_DEBUG_MODE": "false"
      }
    },
    "staging": {
      "variables": {
        "NODE_ENV": "production",
        "REACT_APP_ENV": "staging",
        "GENERATE_SOURCEMAP": "true",
        "REACT_APP_DOMAIN": "voiceinputassistant-staging.up.railway.app",
        "REACT_APP_BASE_URL": "https://voiceinputassistant-staging.up.railway.app",
        "REACT_APP_ENABLE_PWA": "true",
        "REACT_APP_DEBUG_MODE": "true"
      }
    },
    "development": {
      "variables": {
        "NODE_ENV": "development",
        "REACT_APP_ENV": "development",
        "GENERATE_SOURCEMAP": "true",
        "REACT_APP_MOCK_API": "true",
        "REACT_APP_DEBUG_MODE": "true"
      }
    }
  },
  "services": [
    {
      "name": "voice-input-assistant-web",
      "source": {
        "type": "image",
        "image": "nginx:alpine"
      },
      "variables": {
        "PORT": "3000"
      },
      "domains": [
        {
          "host": "voiceinputassistant.up.railway.app"
        }
      ],
      "healthcheck": {
        "path": "/health",
        "timeout": 30
      },
      "resources": {
        "memory": "512Mi",
        "cpu": "0.5"
      }
    }
  ]
}